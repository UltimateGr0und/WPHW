@model WPHW3.Models.AdminViewModel
@using WPHW3.Helpers
@{
    ViewBag.Title = "AdminMaster";
}

<h2>Welcome @Model.CurrentUser.FullName</h2>

@Html.ActionLink("Log out", "LogOut")

<h3>Create new doctor</h3>
<form action="CreateDoctor" method="post">
    <div>
        <label>Login</label>
        <input type="text" name="username" />
    </div>
    <div>
        <label>Password</label>
        <input type="password" name="password" />
    </div>
    <div>
        <label>Fullname</label>
        <input type="text" name="fullname" />
    </div>
    <div>
        <label>Description</label>
        <input type="text" name="description" />
    </div>
    <input type="submit" name="submitButton" value="Create" />
</form>


<h3>Doctors</h3>
@foreach (var doctor in Model.Doctors)
{
    <h4>@doctor.FullName</h4>
    <p>@doctor.Description</p>
}
<div class="btn-group">
    @Html.PageLinks(Model.DoctorsPageInfo, x => Url.Action("AdminMaster", new { DoctorsPageNumber = x }))
</div>

<h3>All users</h3>
@foreach (var doctor in Model.Users)
{
    <h4>@doctor.FullName</h4>
}
<div class="btn-group">
    @Html.PageLinks(Model.UsersPageInfo, x => Url.Action("AdminMaster", new { UsersPageNumber = x }))
</div>