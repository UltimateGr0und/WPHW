@model IEnumerable<Exam1.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminsLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AccountCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountType)
        </td>
        <td>
            @Html.ActionLink("Edit", "AccountEdit", new { id=item.Id }) |
            @Html.ActionLink("Details", "AccountDetails", new { id=item.Id }) |
            @Html.ActionLink("Delete", "AccountDelete", new { id=item.Id })
        </td>
    </tr>
}

</table>
